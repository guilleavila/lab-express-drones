<div class="container">
    <h2>Create a new drone</h2>
    <div class="row justify-content-center">
        <div class="col-6 d-flex justify-content-center">
            <form class="form" action="/drones/create" method="POST">
                <div>
                    <label class="d-flex justify-content-between align-items-center firstlabel">
                        <p>Nombre</p>
                        <input type="text" name="name">
                    </label>
                </div>
                <div>
                    <label class="d-flex justify-content-between align-items-center">
                        <p>Propellers</p>
                        <input type="number" name="propellers">
                    </label>
                </div>
                <div>
                    <label class="d-flex justify-content-between align-items-center">
                        <p>Max Speed</p>
                        <input type="number" name="maxSpeed">
                    </label>
                </div>

                <div class="d-flex justify-content-center">
                    <button class="edit-button btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>