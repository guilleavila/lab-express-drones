<div class="container">
    <h2>Update {{name}}</h2>

    <div class="row justify-content-center">
        <div class="col-6 d-flex justify-content-center">
            <form class="form" action="/drones/{{_id}}/edit" method="POST">
                <div>
                    <label class="d-flex justify-content-between align-items-center firstlabel">
                        <p>Nombre</p>
                        <input type="text" name="name" value="{{name}}">
                    </label>
                </div>
                <div>
                    <label class="d-flex justify-content-between align-items-center">
                        <p>Propellers</p>
                        <input type="number" name="propellers" value="{{propellers}}">
                    </label>
                </div>
                <div>
                    <label class="d-flex justify-content-between align-items-center">
                        <p>Max Speed</p>
                        <input type="number" name="maxSpeed" value="{{maxSpeed}}">
                    </label>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="edit-button btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

</div>